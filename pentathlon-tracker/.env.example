# Database (PostgreSQL - required for Vercel deployment)
# Use Neon, Supabase, or Vercel Postgres
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-random-secret-minimum-32-characters-long"
NEXTAUTH_URL="https://your-domain.vercel.app"

# Encryption Key (for sensitive data)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-encryption-key-minimum-32-characters-long"

# Super Admin (creates admin user on first seed)
SUPER_ADMIN_EMAIL="admin@example.com"
SUPER_ADMIN_PASSWORD="secure-password-here"
SUPER_ADMIN_NAME="Admin"
